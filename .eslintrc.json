{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["*.config.js"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [2, "double"],
        "semi": [0]
    }
}